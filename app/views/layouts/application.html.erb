<!DOCTYPE html>
<html>
  <head>
    <title>Running Think-Tank</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark bg-inverse">
      <div class="container">
        <%= link_to "Running Think-Tank", root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contactus_path, class: "nav-link" %></li>
          </ul>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav" style="float: right">
          <li class="nav-item"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link btn btn-primary" %></li>
          </ul>
      <% else %>
        <ul class="nav navbar-nav" style="float: right">
          <li class="nav-item"><%= link_to "Sign up", signup_path, class: "nav-link btn btn-primary" %></li>
          <li class="nav-item"><%= link_to "Sign in", signin_path, class: "nav-link btn btn-primary" %></li>
      <% end %>
        </ul>
      </div>
    </nav>

<!--Flash Messages -->
<% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
      <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2017 Running Think-Tank</p>
        </center>
      </div>
    </footer>

  </body>
</html>
